{
    "compilerOptions": {
      "target": "es2017",
      "typeRoots": [
        "./node_modules/@types",
      ],
      "lib": [
        "es2017",
        "dom"
      ],
      "declaration": true,
      "module": "commonjs",
      "sourceMap": true,
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "outDir": "build",
      "noUnusedLocals": true,
      "noImplicitAny": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "rootDir": "./src",
      "skipLibCheck": true,
      "removeComments": true,
      "preserveConstEnums": true,
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "include": [
      "index.ts",
      "**/*.ts"
    ]
  }
  